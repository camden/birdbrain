{
  "name": "birdbrain-server",
  "version": "1.0.0",
  "main": "index.js",
  "engines": {
    "node": "12.x"
  },
  "license": "MIT",
  "scripts": {
    "build-client": "yarn --cwd client && yarn --cwd client build",
    "build-ts": "tsc -p tsconfig.json",
    "build": "yarn build-client",
    "dev-server": "ts-node-dev --respawn --transpileOnly ./server/app.ts",
    "dev-client": "yarn --cwd client start",
    "start": "node ./build/app.js",
    "postinstall": "yarn build-ts"
  },
  "dependencies": {
    "@types/express": "^4.17.2",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-client": "^1.4.32",
    "express": "^4.17.1",
    "socket.io": "^2.3.0",
    "typescript": "^3.7.5"
  },
  "devDependencies": {
    "ts-node-dev": "^1.0.0-pre.44"
  }
}
